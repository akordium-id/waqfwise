# Server Configuration
APP_ENV=development
APP_NAME=WaqfWise
APP_VERSION=1.0.0
HTTP_PORT=8080
HTTPS_PORT=8443

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=waqfwise
DB_PASSWORD=waqfwise_dev_password
DB_NAME=waqfwise
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=waqfwise_redis_password
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Kafka Configuration
KAFKA_BROKERS=localhost:29092
KAFKA_GROUP_ID=waqfwise-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=7d
JWT_ISSUER=waqfwise

# OAuth2 Configuration
OAUTH2_GOOGLE_CLIENT_ID=
OAUTH2_GOOGLE_CLIENT_SECRET=
OAUTH2_GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

OAUTH2_FACEBOOK_CLIENT_ID=
OAUTH2_FACEBOOK_CLIENT_SECRET=
OAUTH2_FACEBOOK_REDIRECT_URL=http://localhost:8080/auth/facebook/callback

# Payment Gateway - Midtrans
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_ENVIRONMENT=sandbox
MIDTRANS_MERCHANT_ID=

# Payment Gateway - Xendit
XENDIT_SECRET_KEY=
XENDIT_WEBHOOK_TOKEN=
XENDIT_ENVIRONMENT=sandbox

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9091

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# Session
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400

# Enterprise Features (Enterprise Edition Only)
ENTERPRISE_LICENSE_KEY=
ENTERPRISE_MULTI_TENANCY_ENABLED=false

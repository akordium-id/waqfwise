# WaqfWise Monolith Environment Configuration
# Copy this file to .env and update with your values

# ===================================
# Application Settings
# ===================================
PORT=8080
ENVIRONMENT=production
LOG_LEVEL=info

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=postgres://waqfwise:YOUR_DB_PASSWORD@localhost:5432/waqfwise_community?sslmode=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s

# ===================================
# Redis Configuration
# ===================================
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================================
# Security
# ===================================
# IMPORTANT: Change this to a secure random string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# JWT Token expiry (in hours)
JWT_ACCESS_EXPIRY=1
JWT_REFRESH_EXPIRY=168

# ===================================
# Payment Gateways
# ===================================
# Midtrans Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Xendit Configuration
XENDIT_SECRET_KEY=your-xendit-secret-key
XENDIT_IS_PRODUCTION=false

# ===================================
# Email Configuration (Optional)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@waqfwise.id

# ===================================
# File Storage (Optional)
# ===================================
STORAGE_TYPE=local
# Options: local, s3, gcs

# For S3/MinIO
S3_BUCKET=waqfwise-uploads
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# For Google Cloud Storage
GCS_BUCKET=waqfwise-uploads
GCS_PROJECT_ID=
GCS_CREDENTIALS_FILE=/path/to/credentials.json

# ===================================
# CORS Configuration
# ===================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://waqfwise.id,https://www.waqfwise.id,https://app.waqfwise.id

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ===================================
# Monitoring & Observability
# ===================================
PROMETHEUS_ENABLED=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ===================================
# Feature Flags
# ===================================
ENABLE_MFA=true
ENABLE_RECURRING_DONATIONS=true
ENABLE_ANALYTICS=false
ENABLE_INTEGRATIONS=false

# ===================================
# Enterprise Features (if enabled)
# ===================================
LICENSE_KEY=
TENANT_ID=
